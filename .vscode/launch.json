{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Launch Gotify Alerter",
            "type": "node",
            "program": "${workspaceFolder}/gotify/main.ts",
            "cwd": "${workspaceFolder}",
            "env": {
                "GOTIFY_URL": "http://example.com",
                "GOTIFY_APP_TOKEN": "1234",
            },
            "runtimeExecutable": "/usr/bin/deno",
            "runtimeArgs": [
                "run",
                "--inspect-wait",
                "--allow-net",
                "--allow-env"
            ],
            "attachSimplePort": 9229
        }
    ]
}